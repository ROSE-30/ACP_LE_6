    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  {# Table headers #}

  {% for m in movies %}
  {# Loop through all movies passed from Flask and create a table row for each #}
  <tr>
    <td>{{ m.title }}</td>        {# Movie title #}
    <td>{{ m.description }}</td>  {# Movie description #}
    <td>
      <a href="{{ url_for('edit_movie', id=m.id) }}">Edit</a> |
      {# Link to edit this movie, passing the movie id #}
      <a href="{{ url_for('delete_movie', id=m.id) }}">Delete</a>
      {# Link to delete this movie, passing the movie id #}
    </td>
  </tr>
  {% endfor %}
